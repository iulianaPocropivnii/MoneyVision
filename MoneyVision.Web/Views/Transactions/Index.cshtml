@model MoneyVision.Domain.Entities.Transaction.Responses.TransactionsListResp

@{
     ViewBag.Title = "Transactions";
     Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Transactions</title>
     <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
     <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">
     <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
     <style>
          body {
               font-family: 'Montserrat', sans-serif;
               color: black;
               background-color: #f8f9fa;
               display: flex;
               justify-content: center;
               align-items: center;
               height: 100vh;
          }

          h2 {
               margin-bottom: 20px;
               color: black;
          }
          div{
               color: black;
          }
          .transactions-list {
               display: flex;
               flex-direction: column;
          }
          .transaction-item div {
               flex: 1;
               padding: 0 10px;
          }

          .transaction-header,
          .transaction-item {
               display: flex;
               justify-content: space-between;
               align-items: center;
               padding: 10px;
               border-radius: 8px;
               background: white;
               margin-bottom: 0.7rem;
               box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
          }

          .transaction-header {
               background: #e9ecef;
               font-weight: bold;
          }

          .transaction-item .actions {
               display: flex;
               justify-content: space-between;
               flex: 1;
          }

          .actions .btn {
               margin-left: 5px;
          }
     </style>
</head>
<body>
     <div class="mt-5 mb-5">
          <h2>
               <span>Transactions</span>
               <a href="@ViewBag.CreateUrl" class="btn btn-primary">Create</a>
          </h2>
          <div class="transactions-list">
               <div class="transaction-header">
                    <div>Id</div>
                    <div>Amount</div>
                    <div>Category</div>
                    <div>Date</div>
                    <div>Actions</div>
               </div>
               @foreach (var item in Model.Transactions)
               {
                    <div class="transaction-item" data-id="@item.Id">
                         <div>@item.Id</div>
                         <div>@item.Amount</div>
                         <div>@item.Category</div>
                         <div>@item.CreatedAt</div>
                         <div class="actions">
                              <button class="btn btn-primary" onclick="location.href='/workspaces/@item.WorkspaceId/Transactions/Update/@item.Id'">Edit</button>
                              <button class="delete-transaction-btn btn btn-danger btn-sm" data-id="@item.Id">Delete</button>
                         </div>
                    </div>
               }
          </div>
     </div>

     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
     <script>
        $(document).ready(function () {
            $('.delete-transaction-btn').click(function () {
                var itemId = $(this).data('id');

                if (confirm('Are you sure you want to delete this item?')) {
                    $.ajax({
                        url: "/Workspaces/@ViewBag.WorkspaceId/Transactions/Delete/" + itemId,
                        type: 'POST',
                        success: function (result) {
                            if (result.success) {
                                $('div[data-id="' + itemId + '"]').remove();
                            } else {
                                alert('Error deleting item.');
                            }
                        },
                        error: function (xhr, status, error) {
                            alert('Error: ' + error);
                        }
                    });
                }
            });
        });
     </script>
</body>
