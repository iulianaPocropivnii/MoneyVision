@model MoneyVision.Domain.Entities.User.UserMinimal

@{
     ViewBag.Title = "Index";
     Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

<div class="container rounded bg-white mt-5 mb-5">
     <div class="row">
          <div class="col-md-3 border-right">
               <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
               </div>
          </div>
          <div class="col-md-5 border-right">
               @Html.ValidationSummary(true)
               @using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { @class = "form", @id = "ProfileForm" }))
               {
                    @Html.AntiForgeryToken()
                    <div class="p-3 py-5">
                         <div class="d-flex justify-content-between align-items-center mb-3">
                              <h4 class="text-right">Profile Settings</h4>
                         </div>
                         <div class="row mt-2">
                              <div class="col-md-6">
                                   <label class="labels">Username</label>
                                   <input name="NewUsername" type="text" class="form-control" placeholder="Enter username" value="@Model.Username" />
                              </div>
                         </div>
                         <div class="row mt-4">
                              <div class="col-md-12">
                                   <label class="labels">Current password</label>
                                   <input name="CurrentPassword" type="password" class="form-control" placeholder="Enter your current password" />
                              </div>
                              <div class="col-md-12">
                                   <label class="labels">New password</label>
                                   <input name="NewPassword" type="password" class="form-control" placeholder="Enter your new password" />
                              </div>
                         </div>
                         <div class="mt-5 text-center">
                              <button type="submit" class="btn btn-primary profile-button">Save Profile</button>
                         </div>
                    </div>
               }
          </div>
     </div>
</div>
